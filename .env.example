# Jellyfin Configuration
JELLYFIN_SERVER_URL=http://your-jellyfin-server:8096

# NextAuth Configuration
NEXTAUTH_SECRET=your-random-secret-here-change-this-in-production
NEXTAUTH_URL=https://yourdomain.com

# Email Configuration (SMTP)
# SMTP server settings for sending emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@jellyconnect.com

# Discord Configuration
# Option 1: Webhook URL (recommended for simplicity)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# Option 2: Bot Token (for more advanced features like DMs)
DISCORD_BOT_TOKEN=YOUR_BOT_TOKEN
DISCORD_CHANNEL_ID=YOUR_CHANNEL_ID

# Optional: From name for emails
FROM_NAME=JellyConnect